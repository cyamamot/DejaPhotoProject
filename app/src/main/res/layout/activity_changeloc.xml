<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/label_cL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Custom Location Name:"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_saveLoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="saveChange"
        android:text="Save Changes"
        android:layout_below="@+id/editText_cL"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <EditText
        android:id="@+id/editText_cL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Location Nickname"
        android:layout_below="@+id/imageCustomLocation"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp" />

    <TextView
        android:id="@+id/imageCustomLocation"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/label_cL"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>